@model IEnumerable<PtixiakiReservations.Models.Shops>
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Index";
}


<div class="row">
        <div class="card-deck ">
            @foreach (var item in Model)
            {
                var photopath = "~/images/" + (item.imgUrl ?? "noimage.jpg");
            <div class="col-sm-9">
                <div class="card">
                    <div class="card-body">

                        <h3 class="card-title">
                            @Html.DisplayFor(modelItem => item.Name)
                        </h3>

                        <p class="card-text">
                            @Html.DisplayFor(modelItem => item.Address)

                            @Html.DisplayFor(modelItem => item.City)

                            @Html.DisplayFor(modelItem => item.PostalCode)

                            @Html.DisplayFor(modelItem => item.Phone)

                            @Html.DisplayFor(modelItem => item.rating)

                            @Html.DisplayFor(modelItem => item.TimeOpen)

                        </p>
                        <img class="card-img-top rounded" height="100" width="160" src=@photopath asp-append-version="true" />
                        <p class="card-text">                        
                            <a asp-action="Details" asp-route-id="@item.ID">Details</a>                           
                           |<span></span> <a asp-controller="Reservations" asp-action="Create" asp-route-shopid="@item.ID">Reservation</a>
                        </p>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>

